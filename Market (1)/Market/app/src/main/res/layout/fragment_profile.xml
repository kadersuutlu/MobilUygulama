<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cerceve.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/profile"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:onClick="Tikla"
            android:text="   Profilim"
            android:textColor="@color/purple_500"
            android:textSize="24dp" />

        <Button
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:onClick="Address"
            android:text="   Adreslerim"
            android:textColor="@color/purple_500"
            android:textSize="24dp" />

        <Button
            android:id="@+id/creditCard"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_credit_card_24"
            android:onClick="CreditCard"
            android:text="   Kartlarım"
            android:textColor="@color/purple_500"
            android:textSize="24dp" />

        <Button
            android:id="@+id/logOut"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:onClick="LogOut"
            android:text="   Çıkış Yap"
            android:textColor="@color/purple_500"
            android:textSize="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>